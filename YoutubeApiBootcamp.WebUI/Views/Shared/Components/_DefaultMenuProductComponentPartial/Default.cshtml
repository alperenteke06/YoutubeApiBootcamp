@model List<YoutubeApiBootcamp.WebUI.Dtos.ProductDtos.ResultProductDto>

<div class="tab-content" data-aos="fade-up" data-aos-delay="200">
    <div class="tab-pane fade active show" id="menu-starters">
        <div class="tab-header text-center">
            <p>Menü</p>
            <h3>Tüm Lezzetler</h3>
        </div>

        <div class="row gy-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 menu-item">
                    <a href="@item.ProductImageUrl" class="glightbox">
                        <img src="@item.ProductImageUrl" class="menu-img img-fluid" alt="" />
                    </a>
                    <h4>@item.ProductName</h4>
                    <p class="ingredients">
                        @item.ProductDescription
                    </p>
                    <p class="price">
                        @item.ProductPrice ₺
                    </p>
                </div>
            }
        </div>
    </div><!-- End Starter Menu Content -->
</div>
